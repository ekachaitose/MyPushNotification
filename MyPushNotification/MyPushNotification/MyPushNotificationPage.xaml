<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPushNotification.MyPushNotificationPage">
    <StackLayout
		VerticalOptions="Fill"
		HorizontalOptions="Fill"
		Orientation="Vertical">
        <Image
			Margin="0,20,0,0"
			HeightRequest="150"
			HorizontalOptions="Fill"
			Source="push_icon_android.png" />
        <Label
			Margin="20,20,0,0"
			TextColor="Black"
			Text="OneSignal ID"
			Font="Bold,25"
			VerticalOptions="Center" />
        <Label
			x:Name="mOneSignalIDLabel"
			Margin="20,8,0,0"
			TextColor="Gray"
			Text="Searching..."
			VerticalOptions="Center" />
        <Label
			Margin="20,10,0,0"
			TextColor="Black"
			Text="New Message"
			Font="Bold,25"
			VerticalOptions="Center" />
        <Label
			Margin="20,8,0,0"
			TextColor="Gray"
			x:Name="mNewMessageLabel"
			Text="Waiting for ....."
			VerticalOptions="Center" />
        <Image
			Margin="0,0,0,20"
			Source="push_graph.png"
			HorizontalOptions="Fill"
			VerticalOptions="EndAndExpand"
			HeightRequest="200" />
    </StackLayout>
</ContentPage>